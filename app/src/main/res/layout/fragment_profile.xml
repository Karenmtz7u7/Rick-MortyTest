<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ProfileFragment"
    android:background="@drawable/background">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="16dp"
         android:orientation="horizontal">
         <ImageView
             android:layout_width="50dp"
             android:layout_height="match_parent"
             android:background="@drawable/ic_person_24"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="60" android:layout_marginLeft="10dp"
             android:orientation="vertical"
             >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Karen Martinez J"
                 android:textColor="@color/black"
                 android:textSize="20sp"
                 android:textStyle="bold"/>
             >
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Desarrollador de apliaciones moviles "
                 android:textColor="@color/black"
                 android:textSize="10sp"/>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="FILUP"
                 android:textColor="@color/black"
                 android:textSize="10sp"/>

         </LinearLayout>
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:layout_marginLeft="16dp"
         android:layout_marginRight="16dp"
         android:background="@color/black"/>

     <LinearLayout
         android:id="@+id/likedinBtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="35dp"
         android:layout_marginTop="25dp"
         android:layout_marginRight="30dp"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/ic_screen_24"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="LinkedIn"
             android:layout_marginLeft="15dp"
             android:textColor="@color/black"
             android:textSize="15sp"/>

     </LinearLayout>
     <LinearLayout
         android:id="@+id/gitHubBtn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="35dp"
         android:layout_marginTop="25dp"
         android:layout_marginRight="30dp"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/ic_screen_24"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="GitHub"
             android:layout_marginLeft="15dp"
             android:textColor="@color/black"
             android:textSize="15sp"/>

     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="35dp"
         android:layout_marginTop="25dp"
         android:layout_marginRight="30dp"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/ic_work_24"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Portafolio"
             android:layout_marginLeft="15dp"
             android:textColor="@color/black"
             android:textSize="15sp"/>

     </LinearLayout>

     <ImageView
         android:id="@+id/gifImage"
         android:layout_gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="60dp"/>




 </LinearLayout>


</FrameLayout>